<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="caios.android.pixivion.fragment.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/trendFragment"
        android:name="caios.android.pixivion.fragment.TrendFragment"
        android:label="TrendFragment" />
    <fragment
        android:id="@+id/newlyFragment"
        android:name="caios.android.pixivion.fragment.NewlyFragment"
        android:label="NewlyFragment" />
    <fragment
        android:id="@+id/userFragment"
        android:name="caios.android.pixivion.fragment.UserFragment"
        android:label="UserFragment" />

    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_trendFragment"
        app:destination="@id/trendFragment" />
    <action
        android:id="@+id/action_global_newlyFragment"
        app:destination="@id/newlyFragment" />
    <action
        android:id="@+id/action_global_userFragment"
        app:destination="@id/userFragment" />
</navigation>
